<%= render :partial => 'admin/shared/configuration_menu' %>

<div class='toolbar'>
  <ul class='actions'>
    <li>
      <%= button_link_to t("new_recommendation_provider"), new_object_url, :icon => 'add'  %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= t("recommendation_providers") %></h1>

<table class="index">
  <thead>
    <th><%= t("name") %></th>
    <th><%= t("type") %></th>
    <th><%= t("environment") %></th>
    <th><%= t("active") %></th>     
    <th><%= t("action") %></th>
  </thead>
  <tbody>
    <% @recommendation_providers.each do |recommendation_provider| %>
      <tr id="<%= dom_id recommendation_provider %>">
        <td width="120px"><%= recommendation_provider.name %></td>
        <td width="140px"><%= recommendation_provider.type %></td>
        <td width="100px"><%= recommendation_provider.environment.to_s.titleize %></td>
        <td width="60px"><%= recommendation_provider.active ? t(:yes) : t(:no) %></td>
        <td width="140px">
        	<%= link_to_edit recommendation_provider %> &nbsp;
        	<%= link_to_delete recommendation_provider %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
